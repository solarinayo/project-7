# Production Server Environment Variables
NODE_ENV=production
PORT=5000

# Database - Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/jekacode?retryWrites=true&w=majority
MONGODB_DB_NAME=jekacode

# Payment Gateway - Live Paystack Keys
PAYSTACK_SECRET_KEY=sk_live_your_live_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_live_your_live_paystack_public_key_here

# Google Sheets Integration
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Production Google Service Account Private Key\n-----END PRIVATE KEY-----\n"
GOOGLE_SHEETS_CLIENT_EMAIL=your-production-service-account@your-project.iam.gserviceaccount.com
GOOGLE_SHEETS_SPREADSHEET_ID=your_production_google_sheets_spreadsheet_id

# Email Configuration - Production SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=noreply@jekacode.com
EMAIL_PASS=your_production_app_password
EMAIL_FROM=noreply@jekacode.com
ADMIN_EMAIL=admin@jekacode.com

# Security
JWT_SECRET=your_super_secure_production_jwt_secret_key_here_minimum_32_characters
ADMIN_PASSWORD=your_secure_production_admin_password

# Webhook
PAYSTACK_WEBHOOK_SECRET=your_production_paystack_webhook_secret

# CORS Origins
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com